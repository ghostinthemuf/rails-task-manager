<h1><%= @task.title %></h1>
<blockquote><%= @task.details %></blockquote>
<p>
  <% if @task.completed? %>
  [X] This task is completed
  <% else %>
  [ ] This task is not completed yet
  <% end %>
</p>

<p><%= link_to "Edit this task", edit_path %></p>

<p><%= link_to "Delete this task", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %></p>

<p><%= link_to "Back to tasks list", tasks_path %></p>
